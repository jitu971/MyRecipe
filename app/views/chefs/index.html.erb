<%= render 'shared/page_title', title: "All Chefs" %>
<ul class="nav nav-tabs">
  <li>
    <%= link_to "Recipes", recipes_path %> 
  </li>
  <li class="active">
    <%= link_to "Chefs", chefs_path %>
  </li>
</ul>
 
<div class="center">
 <%= will_paginate %>
</div>

<div class="well div_chef_table">
<table>
  <tr>
    <% @chefs.each do |chef| %>
    <td>
        <div class="td_image_padding center" >
          <%= link_to gravatar_for(chef, size: 200), chef_path(chef)%>
            <h5>Chef Name: <%= chef.chefname %></h5>  
        </div>
    </td>
    <% end %>
  </tr>
</table>
</div>




<% if false %>
<% @chefs.each do |chef| %>
  <div class="row">
   <div class="col-md-4 col-md-offset-4 center">
    <%= link_to gravatar_for(chef, size: 200), chef_path(chef)%>
    <p>
      <h5>Chef Name: <%= chef.chefname %></h5>
    </p>  
   </div>
  </div>
<% end %>
<% end %>

<div class="center">
 <%= will_paginate %>
</div>
