<% if false %>
  <%= render 'shared/page_title', title: "Chef: " + @chef.chefname %>
<% end %>

<%= render 'shared/page_title', title: "Chef Detail"%>

<table>
  <tr>
    <td style="width:30%">
      <div class="center" style="padding-top:30px;">
      <%= gravatar_for @chef, size: 200 %>  
      <font color="#DC143C"><h5><i>Chef Name: <%= @chef.chefname %></i></h5> </font>
      </div>
    </td>
    <td> 
        <div align="center" class="div_chef_recipes_show">
          <% if @recipes.exists? %>
            <% if @recipes.count >= 3 %>
              <%= will_paginate @recipes %>
              <% @recipes.each do |recipe| %>
                <h4>
                  <i><b>Recipe:</b></i>
                  <%= link_to recipe.name, recipe_path(recipe) %>
                </h4>
              <% end %>
            <% else %>
              <div style="padding-top:50px;">
                <% @recipes.each do |recipe| %>
                  <h4>
                    <i><b>Recipe:</b></i>
                    <%= link_to recipe.name, recipe_path(recipe) %>
                  </h4>
                <% end %>
              </div>
            <% end %>  
          <% else %>
            <div style="padding-top:50px;">
              <h2><i><b>Create Your First Recipe......</b></i></h2>
            </div>
          <% end %>
        </div>
    </td>
  </tr>
</table>



<% if false %>
<div class="row">
  <div class="col-md-4 col-lg-offset-4 center">
    <%= gravatar_for @chef, size: 200 %>
    <hr/> 
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <h3><em>Recipes:</em></h3>
    <%= will_paginate @recipes %>
  </div>
</div>

<% @recipes.each do |recipe| %>
  <div class="row">
     <div class="col-lg-6 well col-lg-offset-3">
      <h4>
        <i><b>Name:</b></i>
        <%= link_to recipe.name, recipe_path(recipe) %>
      </h4>
      <p><i><b>Summary: </b></i><%= recipe.summary%></p>
      <p><i><b>Description: </b></i><%= recipe.description%></p>
      <p>
        <span class="quite">
          <small>
            Created: <%= time_ago_in_words(recipe.created_at)%> ago,
          </small>
        </span>
        <span class="quite">
          <small>
            Updated: <%= time_ago_in_words(recipe.updated_at)%>
          </small>
        </span>
      </p>
      <div class="pull-right">
        <%= link_to like_recipe_path(recipe, like: true), method: :post do %>
          <i class="glyphicon glyphicon-thumbs-up"></i> &nbsp <%= recipe.thumbs_up_total %> 
        <% end %> &nbsp&nbsp&nbsp&nbsp
        <%= link_to like_recipe_path(recipe, like: false), method: :post do %>
          <i class="glyphicon glyphicon-thumbs-down"></i>&nbsp <%= recipe.thumbs_down_total %> 
        <% end %> 
      </div>
    </div>
  </div>
<% end %>
<% end %>
